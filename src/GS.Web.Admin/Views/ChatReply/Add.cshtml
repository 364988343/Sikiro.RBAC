@{
    ViewData["Title"] = "Add";
    var lisItem= (List<SelectListItem>)ViewBag.lisItem;
}
@model Sikiro.Web.Admin.Models.ChatReply.ChatReplyEditModel

<style>
    .layui-table, .layui-table-view {
        margin: 10px auto;
    }
</style>
<layuiForm id="layuiadmin-form-admin" asp-controller="ChatReply" asp-action="Add" style="padding: 20px">



    <layuiSelect asp-for="ParentId" data="@lisItem" input-display="LayuiFormItem" text="预计类型" />
    <layuiFormEdit asp-for="News" text="回复内容" />
    <layuiSelect asp-for="Status" text="状态选择" input-display="LayuiFormItem" />
    <layuiFormEdit asp-for="Code" text="简码" />
    <layuiFormEdit asp-for="Order" text="排序" type="number" />
</layuiForm>