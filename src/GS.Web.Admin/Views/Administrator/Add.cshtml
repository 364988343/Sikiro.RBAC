@{
    ViewData["Title"] = "Edit";
}
@model Sikiro.Web.Admin.Models.Administrator.AddVo

<layuiForm id="layuiadmin-form-admin" asp-controller="Administrator" asp-action="Add" style="padding: 20px">

    <layuiFormEdit asp-for="UserName" />

    <layuiFormEdit asp-for="RealName" />

    <layuiFormEdit asp-for="Phone" />

    <layuiSelect asp-for="CompanyId" url="/Company/CompanySelect" defaultText="请选择" input-display="LayuiFormItem" />

    <layuiSelect asp-for="DepartmentId" url="/Department/DepartmentSelect" defaultText="请选择" input-display="LayuiFormItem" />

    <layuiMultiSelect asp-for="PositionIds" url="/Position/PositionSelect" defaultText="请选择" input-display="LayuiFormItem" />

    <layuiSelect asp-for="Status" input-display="LayuiFormItem" />

    <layuiMultiSelect asp-for="RoleIds" url="/Role/RoleSelect" defaultText="请选择" input-display="LayuiFormItem" />

    <layuiSelect asp-for="Type" input-display="LayuiFormItem" />

    <layuiFormEdit asp-for="Password" type="password" />

</layuiForm>